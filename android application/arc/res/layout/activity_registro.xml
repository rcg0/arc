<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:text="Bienvenido a la plataforma ARC"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView1"
        android:layout_toRightOf="@+id/TextView03"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android1:id="@+id/button1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentBottom="true"
        android1:layout_centerHorizontal="true"
        android1:layout_marginBottom="16dp"
        android1:text="Entrar" />

    <CheckBox
        android1:id="@+id/checkBox2"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignBaseline="@+id/checkBox1"
        android1:layout_alignBottom="@+id/checkBox1"
        android1:layout_toRightOf="@+id/checkBox1"
        android1:text="Femenino" />

    <TextView
        android1:id="@+id/textView1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentLeft="true"
        android1:layout_below="@+id/textView5"
        android1:layout_marginLeft="36dp"
        android1:layout_marginTop="43dp"
        android1:text="Alias" />

    <CheckBox
        android1:id="@+id/checkBox1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_below="@+id/editText1"
        android1:layout_toRightOf="@+id/TextView03"
        android1:text="Masculino" />

    <TextView
        android1:id="@+id/TextView01"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignBaseline="@+id/checkBox1"
        android1:layout_alignBottom="@+id/checkBox1"
        android1:layout_alignLeft="@+id/textView1"
        android1:text="Sexo" />

    <TextView
        android1:id="@+id/TextView03"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/TextView02"
        android1:layout_alignTop="@+id/Spinner01"
        android1:text="ProfesiÃ³n" />

    <Spinner
        android1:id="@+id/Spinner01"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/spinner1"
        android1:layout_alignParentRight="true"
        android1:layout_below="@+id/spinner1"
        android1:layout_marginTop="18dp"
        android1:entries="@array/arrayTrabajos" />

    <TextView
        android1:id="@+id/TextView02"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignBottom="@+id/spinner1"
        android1:layout_alignLeft="@+id/TextView01"
        android1:text="Edad" />

    <Spinner
        android1:id="@+id/spinner1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/checkBox1"
        android1:layout_alignParentRight="true"
        android1:layout_below="@+id/checkBox2"
        android1:layout_marginTop="31dp"
        android1:entries="@array/arrayEdades" />

</RelativeLayout>
