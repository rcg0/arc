<ScrollView	xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity">


<RelativeLayout
   
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android1:layout_centerHorizontal="true"
    
     >
        
    <TextView
        android:id="@+id/textViewMensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        android:text="Crea tu tarjeta de visita (vCard)"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <TextView
        android1:id="@+id/textViewPais"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentLeft="true"
        android1:layout_marginLeft="36dp"
        android1:layout_marginTop="43dp"
        android1:text="País" />
    
     <TextView
        android1:id="@+id/textViewCiudad"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentLeft="true"
        android1:layout_marginLeft="36dp"
        android1:layout_marginTop="73dp"
        android1:text="Ciudad" />
     
      <TextView
        android1:id="@+id/textViewLocalidad"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentLeft="true"
        android1:layout_marginLeft="36dp"
        android1:layout_marginTop="103dp"
        android1:text="Localidad" />
      
       <TextView
        android1:id="@+id/textViewPostal"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentLeft="true"
        android1:layout_marginLeft="36dp"
        android1:layout_marginTop="133dp"
        android1:text="Código postal" />
      
       <EditText
           android1:id="@+id/editTextPostal"
           android1:layout_width="wrap_content"
           android1:layout_height="wrap_content"
           android1:layout_alignRight="@+id/editTextDireccion"
           android1:layout_marginTop="133dp"
           android1:layout_toRightOf="@+id/textViewPostal"
           android:inputType="number" />
     
        <TextView
        android1:id="@+id/textViewDireccion"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentLeft="true"
        android1:layout_marginLeft="36dp"
        android1:layout_marginTop="163dp"
        android1:text="Dirección" />
        
        <EditText
            android1:id="@+id/editTextDireccion"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_alignRight="@+id/editTextNombre"
            android1:layout_marginTop="163dp"
            android1:layout_toRightOf="@+id/textViewDireccion"
            android:inputType="text" />
        
         <TextView
        android1:id="@+id/textViewNombre"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentLeft="true"
        android1:layout_marginLeft="36dp"
        android1:layout_marginTop="193dp"
        android1:text="Nombre" />
        
         <EditText
             android1:id="@+id/editTextNombre"
             android1:layout_width="wrap_content"
             android1:layout_height="wrap_content"
             android1:layout_alignRight="@+id/editTextCuidad"
             android1:layout_marginTop="193dp"
             android1:layout_toRightOf="@+id/textViewNombre"
             android:inputType="text" />
         
        <TextView
        android1:id="@+id/textViewEmail"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentLeft="true"
        android1:layout_marginLeft="36dp"
        android1:layout_marginTop="223dp"
        android1:text="Email" />
         
        <EditText
            android1:id="@+id/editTextEmail"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_alignRight="@+id/editTextNombre"
            android1:layout_marginTop="223dp"
            android1:layout_toRightOf="@+id/textViewEmail"
            android:inputType="text" />

    	<TextView
        android1:id="@+id/textViewWeb"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_marginTop="253dp"
        android1:layout_marginLeft="36dp"
        android1:text="Página web" />

    	<EditText
    	    android1:id="@+id/editTextWeb"
    	    android1:layout_width="wrap_content"
    	    android1:layout_height="wrap_content"
    	    android1:layout_alignRight="@+id/editTextEmail"
    	    android1:layout_marginTop="253dp"
    	    android1:layout_toRightOf="@+id/textViewWeb"
    	    android:inputType="text" />
    
    	<TextView
        android1:id="@+id/textViewTelefono"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_marginTop="283dp"
        android1:layout_marginLeft="36dp"
        android1:text="Teléfono" />

    	<EditText
    	    android1:id="@+id/editTextTelefono"
    	    android1:layout_width="wrap_content"
    	    android1:layout_height="wrap_content"
    	    android1:layout_alignRight="@+id/editTextWeb"
    	    android1:layout_marginTop="283dp"
    	    android1:layout_toRightOf="@+id/textViewTelefono"
    	    android:inputType="number" />
    
     	<Button
        android1:id="@+id/buttonCrear"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"      
        android1:layout_centerHorizontal="true"
        android1:layout_marginTop="323dp"
        android1:text="Crear" />

     	<EditText
     	    android1:id="@+id/editTextPais"
     	    android1:layout_width="wrap_content"
     	    android1:layout_height="wrap_content"
     	    android1:layout_alignRight="@+id/editTextCuidad"
     	    android1:layout_alignTop="@+id/textViewPais"
     	    android1:layout_toRightOf="@+id/textViewCiudad"
     	    android1:ems="10"
     	    android1:inputType="text" >

     	    <requestFocus />
     	</EditText>

     	<EditText
     	    android1:id="@+id/editTextCuidad"
     	    android1:layout_width="wrap_content"
     	    android1:layout_height="wrap_content"
     	    android1:layout_alignRight="@+id/textViewMensaje"
     	    android1:layout_alignTop="@+id/textViewCiudad"
     	    android1:layout_toRightOf="@+id/textViewDireccion"
     	    android1:ems="10"
     	    android1:inputType="text" />

     	<EditText
     	    android1:id="@+id/editTextLocalidad"
     	    android1:layout_width="wrap_content"
     	    android1:layout_height="wrap_content"
     	    android1:layout_alignRight="@+id/editTextPostal"
     	    android1:layout_alignTop="@+id/textViewLocalidad"
     	    android1:ems="10"
     	    android1:inputType="text" />
     
</RelativeLayout>
</ScrollView>