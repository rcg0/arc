        android1:layout_below="@+id/Spinner01"
        android1:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android1:text="Registrar" />
    
    <Spinner
        android1:id="@+id/spinner1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
		android1:layout_centerHorizontal="true"		
        android1:layout_below="@+id/TextView02"
        android1:layout_marginTop="31dp"
        android1:entries="@array/arrayEdades" />

  

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:src="@drawable/arc_logo" />

    <CheckBox
        android1:id="@+id/checkBox1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_centerHorizontal="true"        
        android1:layout_below="@+id/TextView01"
        android:layout_marginTop="15dp"
        
        android1:text="Masculino" />

