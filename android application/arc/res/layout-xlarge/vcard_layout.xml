<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

<RelativeLayout
   
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android1:layout_centerHorizontal="true"
    
     >
        
    <TextView
        android:id="@+id/textViewMensaje"
        android1:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="Crea tu tarjeta de visita (vCard)"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <TextView
        android1:id="@+id/textViewPais"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android1:text="País" />
    
      <EditText
     	    android1:id="@+id/editTextPais"
     	    android1:layout_width="wrap_content"
     	    android1:layout_height="wrap_content"
     	    android1:layout_below="@+id/textViewPais"
     	    android:layout_centerHorizontal="true"
     	    android1:ems="10"
     	    android1:inputType="text" >

     	    <requestFocus />
     	</EditText>
    
    <TextView
        android1:id="@+id/textViewCiudad"
        android:layout_centerHorizontal="true"
        
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
     	android1:layout_below="@+id/editTextPais"
        android1:text="Ciudad" />

     	<EditText
     	    android1:id="@+id/editTextCuidad"
     	    android1:layout_width="wrap_content"
     	    android1:layout_height="wrap_content"
     	    android1:layout_below="@+id/textViewCiudad"
     	    android:layout_centerHorizontal="true"
     	         	    android1:ems="10"
     	    
     	    android1:inputType="text" />

     	 
     
      <TextView
        android1:id="@+id/textViewLocalidad"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_below="@+id/editTextCuidad"
        
        android:layout_centerHorizontal="true"
        
        android1:text="Localidad" />
      
      
      
     	<EditText
     	    android1:id="@+id/editTextLocalidad"
     	    android1:layout_width="wrap_content"
     	    android1:layout_height="wrap_content"
     	    android1:layout_below="@+id/textViewLocalidad"
     	    android:layout_centerHorizontal="true"
     	    
     	    android1:ems="10"
     	    android1:inputType="text" />
     
     	      
       <TextView
        android1:id="@+id/textViewPostal"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android1:layout_below="@+id/editTextLocalidad"
		
		
        android1:text="Código postal" />
      
       <EditText
           android1:id="@+id/editTextPostal"
           android1:layout_width="wrap_content"
           android1:layout_height="wrap_content"

		   android:layout_centerHorizontal="true"
		   android1:layout_below="@+id/textViewPostal"
     	    android1:ems="10"

           android:inputType="number" />

       <TextView
        android1:id="@+id/textViewDireccion"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
 
   		android:layout_centerHorizontal="true"
		android1:layout_below="@+id/editTextPostal"
 
        android1:text="Dirección" />
        
        <EditText
            android1:id="@+id/editTextDireccion"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:ems="10"
            
            android:layout_centerHorizontal="true"
		   	android1:layout_below="@+id/textViewDireccion"
            android:inputType="text" />
     
         <TextView
        android1:id="@+id/textViewNombre"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
      
      	  android:layout_centerHorizontal="true"
		   android1:layout_below="@+id/editTextDireccion"
      	
      
        android1:text="Nombre" />
        
         <EditText
             android1:id="@+id/editTextNombre"
             android1:layout_width="wrap_content"
             android1:layout_height="wrap_content"
             
             android:layout_centerHorizontal="true"
		   	 android1:layout_below="@+id/textViewNombre"
                         android1:ems="10"
             
             android:inputType="text" />
         
         <TextView
        android1:id="@+id/textViewEmail"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        
          android:layout_centerHorizontal="true"
		   android1:layout_below="@+id/editTextNombre"
        
        android1:text="Email" />
         
        <EditText
            android1:id="@+id/editTextEmail"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
                                       android1:ems="10"
              
		   android1:layout_below="@+id/textViewEmail"
            android:inputType="text" />
     
        
        
    	<TextView
        android1:id="@+id/textViewWeb"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        
          android:layout_centerHorizontal="true"
		   android1:layout_below="@+id/editTextEmail"
        
        android1:text="Página web" />

    	<EditText
    	    android1:id="@+id/editTextWeb"
    	    android1:layout_width="wrap_content"
    	    android1:layout_height="wrap_content"
    	    android:layout_centerHorizontal="true"
		    android1:layout_below="@+id/textViewWeb"
		    android1:ems="10"
		    
    	    android:inputType="text" />
    
    	<TextView
        android1:id="@+id/textViewTelefono"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
		android1:layout_below="@+id/editTextWeb"
        android1:text="Teléfono" />

    	<EditText
    	    android1:id="@+id/editTextTelefono"
    	    android1:layout_width="wrap_content"
    	    android1:layout_height="wrap_content"
    	    android:layout_centerHorizontal="true"
		    android1:layout_below="@+id/textViewTelefono"
		    android1:ems="10"
    	    android:inputType="number" />
    	

    
     	<Button
        android1:id="@+id/buttonCrear"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"      
        android1:layout_centerHorizontal="true"
        android1:layout_below="@+id/editTextTelefono"
        android1:text="Crear" />

    	
        
</RelativeLayout>
</ScrollView>